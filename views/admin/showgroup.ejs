<%- include ("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center mb-3">
            <h1>Group Details for: <%=group.groupName%></h1>
        </div>
        <div class="col-md-6 col-lg-4">
            <form action="/admin/groups/<%=group._id%>?_method=PUT" method="POST">
                <div class="form-group row">
                    <label for="actualname" class="col-sm-6 col-form-label ">Group Name:</label>
                    <div class="col-sm-6 user-div">
                        <input type="text" readonly class="form-control-plaintext" id="actualname" value="<%=group.groupName%>">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="price" class="col-sm-6 col-form-label">Group Storage Limit:</label>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <input class="form-control text-center" type="number" value="<%=group.groupLimit%>" name="itemSize" min="10" max= "100" step="5" id="price">
                            <div class="input-group-append">
                                <span class="input-group-text" id="basic-addon2">items</span>
                            </div>
                        </div>
                    </div>                      
                </div>
                <fieldset class="form-group">
                    <div class="row">
                      <legend class="col-form-label col-sm-6 pt-0">Active:</legend>
                      <div class="col-sm-6">
                        <div class="form-check">
                            <%if(group.isActive){%>
                                <input class="form-check-input" type="radio" name="isActive" id="gridRadios1" value="no">
                            <%}else{%>
                                <input class="form-check-input" type="radio" name="isActive" id="gridRadios1" value="no" checked>
                            <%}%>
                            <label class="form-check-label" for="gridRadios1">
                                No
                            </label>
                        </div>
                        <div class="form-check">
                            <%if(group.isActive){%>
                                <input class="form-check-input" type="radio" name="isActive" id="gridRadios2" value="yes" checked>
                            <%}else{%>
                                <input class="form-check-input" type="radio" name="isActive" id="gridRadios2" value="yes">
                            <%}%>
                          <label class="form-check-label" for="gridRadios2">
                            Yes
                          </label>
                        </div>
                      </div>
                    </div>
                </fieldset>
                <div class="form-group">
                    <button class="form-control btn-sm btn-primary" >Save</button>
                </div>                
            </form>

            <a href="/admin/" class="btn btn-sm btn-info">Go Back</a>
        </div>
    </div>

    
</div>


<%- include ("../partials/footer") %>